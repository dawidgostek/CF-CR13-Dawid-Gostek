{% extends 'base.html.twig' %}

{% block title %}Hello EventController!{% endblock %}

{% block body %}
<img src="https://nambrazz.com/wp-content/uploads/2017/08/all-events.jpg" style="width: 100%; height:300px;">
<div class="container mt-5">
<div class="row">
    {% for event in events %}
    <div class="col-4 my-5">
        <div class="card h-100">
            <img src="{{ event.image }}" class="card-img-top" style="height: 250px;">
            <div class="card-body">
                <h5 class="card-title">{{ event.name }}</h5>
                <p class="card-text">{{ event.time|date('j. F Y, g:i a') }}</p>
                <p class="card-text">{{ event.shortDescription }}</p>
                <a href="/details/{{ event.id }}" class="btn btn-danger">Show more</a>
                <a href="/edit/{{ event.id }}" class="btn btn-danger">Edit</a>
                <a href="/delete/{{ event.id }}" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
        {% endfor %}
</div>
</div>
{% endblock %}
